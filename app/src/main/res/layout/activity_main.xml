<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinerLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/t_style"
            android:ems="10"></TextView>

        <EditText
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/e_style"
            android:ems="10"
            android:hint="@string/input"
            android:gravity="center_vertical"
            android:inputType="numberSigned"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button1"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/botton1"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button2"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton2"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button3"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton3"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonP"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton4"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button4"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton5"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button5"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton6"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button6"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton7"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonX"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton8"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button7"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton9"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button8"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton10"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button9"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton11"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonD"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/botton12"
                    android:layout_gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button0"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/botton13"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonR"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/botton14"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonC"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/botton15"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonM"
                    android:background="@drawable/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/botton16"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>